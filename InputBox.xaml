<Window x:Class="GraphPathfinder.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Value" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock x:Name="QuestionTextBlock" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Click="OKButton_Click" MinWidth="60" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Click="CancelButton_Click" MinWidth="60"/>
        </StackPanel>
    </StackPanel>
</Window>